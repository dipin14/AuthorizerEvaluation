@model AuthorizerPresentation.ViewModels.RoleViewModel

@{
    ViewBag.Title = "CreateRole";
}

<h2>Create new Role</h2>
@if (@ViewBag.Message != null)
{
    <div style="color: red">
        @ViewBag.Message
    </div>
    <div class="form-actions no-color">
        @Html.ActionLink("Back to List", "Index")
    </div>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter Role Details</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <h5>Specify page privileges</h5>
        <div class="form-group">
            @Html.LabelFor(model => model.AccessToPageA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AccessToPageA)
                    @Html.ValidationMessageFor(model => model.AccessToPageA, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccessToPageB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AccessToPageB)
                    @Html.ValidationMessageFor(model => model.AccessToPageB, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccessToPageC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AccessToPageC)
                    @Html.ValidationMessageFor(model => model.AccessToPageC, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
